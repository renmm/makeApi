{
  "name": "makeapi",
  "version": "0.0.1",
  "description": "简单，快速构建api",
  "main": "main.js",
  "scripts": {
    "start": "nodemon app.js",
    "start:debug": "babel-node-debug  app.js",
    "db": "mongod",
    "commit:init": "commitizen init cz-conventional-changelog --save --save-exact",
    "lint": "standard --verbose | snazzy --format",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "standard": {
    "ignore": [
      "dist/",
      "**/lib/"
    ],
    "env": {
      "mocha": true
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renmm/makeApi.git"
  },
  "keywords": [
    "api",
    "mock",
    "doc"
  ],
  "author": "renmaomin <renmaomin@126.com> (https://github.com/renmm)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/renmm/makeApi/issues"
  },
  "homepage": "https://github.com/renmm/makeApi#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^1.3.2",
    "nodemon": "^1.11.0",
    "snazzy": "^5.0.0",
    "standard": "^8.3.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "config": "^1.21.0",
    "koa": "^1.2.4",
    "koa-bodyparser": "^2.2.0",
    "koa-frouter": "^0.3.3",
    "koa-scheme": "^2.2.0",
    "koa-static": "^2.0.0",
    "ls-sync": "^0.3.0",
    "mongodb": "^2.2.10",
    "mongoose": "^4.6.3",
    "validator": "^6.0.0"
  }
}
